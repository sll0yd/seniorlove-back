<%- include('./partials/header') %>

<div class="section">
  <h1 class="title is-1 has-text-centered">Senior Love Administration Login Page</h1>

  <div class="container">
    <p class="subtitle is-4 has-text-centered">Please login to access the administration dashboard</p>
    <p class="subtitle is-6 has-text-centered">If you don't have an account, please contact the administrator</p>

    <div class="columns is-centered">
      <div class="column is-half">
        <div class="box">
          <form action="/admin/login" method="POST">
            <div class="field">
              <label class="label" for="username">Username</label>
              <div class="control">
                <input class="input" type="text" placeholder="Username" name="email" required>
              </div>
            </div>
        
            <div class="field">
              <label class="label" for="password">Password</label>
              <div class="control">
                <input class="input" type="password" placeholder="Password" name="password" required>
              </div>
            </div>
        
            <div class="field">
              <div class="control">
                <button type="submit" class="button is-primary is-fullwidth">Login</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>